{
  "model": "gpt-5.2-codex",
  "instructions_file": ".github/copilot-instructions.md",
  "context": {
    "always_include": [
      "CLAUDE.md"
    ],
    "exclude": [
      "*.db",
      "*.sqlite",
      "bin/",
      "obj/",
      "node_modules/",
      "__pycache__/",
      "*.pyc"
    ]
  },
  "coding_standards": {
    "csharp": {
      "style": "modern",
      "async_first": true,
      "nullable_enabled": true,
      "logging_required": true
    },
    "python": {
      "style": "pep8",
      "type_hints": true,
      "logging_framework": "logging"
    }
  },
  "security": {
    "require_input_validation": true,
    "require_parameterized_queries": true,
    "require_path_validation": true,
    "forbid_hardcoded_secrets": true
  },
  "suggestions": {
    "prioritize_security": true,
    "prioritize_async": true,
    "suggest_logging": true,
    "suggest_error_handling": true,
    "suggest_tests": true
  }
}
