@page "/"
@attribute [Authorize]
@inject ILogger<Dashboard> Logger

<PageTitle>Dashboard - Castr</PageTitle>

<MudText Typo="Typo.h3" Class="mb-4">Dashboard</MudText>

<MudGrid>
    <MudItem xs="12" sm="6" md="3">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.h4" Color="Color.Primary">
                <MudIcon Icon="@Icons.Material.Filled.RssFeed" Size="Size.Large" />
            </MudText>
            <MudText Typo="Typo.h6">Active Feeds</MudText>
            <MudText Typo="Typo.body1">Coming soon</MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="6" md="3">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.h4" Color="Color.Secondary">
                <MudIcon Icon="@Icons.Material.Filled.Download" Size="Size.Large" />
            </MudText>
            <MudText Typo="Typo.h6">Downloads</MudText>
            <MudText Typo="Typo.body1">Coming soon</MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="6" md="3">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.h4" Color="Color.Success">
                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Size="Size.Large" />
            </MudText>
            <MudText Typo="Typo.h6">Episodes</MudText>
            <MudText Typo="Typo.body1">Coming soon</MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="6" md="3">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.h4" Color="Color.Info">
                <MudIcon Icon="@Icons.Material.Filled.Storage" Size="Size.Large" />
            </MudText>
            <MudText Typo="Typo.h6">Storage</MudText>
            <MudText Typo="Typo.body1">Coming soon</MudText>
        </MudPaper>
    </MudItem>
</MudGrid>

<MudText Typo="Typo.h5" Class="mt-6 mb-4">Recent Activity</MudText>
<MudPaper Elevation="2" Class="pa-4">
    <MudText Typo="Typo.body1">Activity feed coming in Phase 3</MudText>
</MudPaper>

@code {
    protected override void OnInitialized()
    {
        Logger.LogDebug("Dashboard page initialized");
    }
}
